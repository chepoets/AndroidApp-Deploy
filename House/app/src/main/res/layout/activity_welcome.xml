<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_welcome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="android.house.dfp.house.Welcome_Activity"
    android:background="#FFA000"
    android:weightSum="1">

    <ImageView
        android:id="@+id/house_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="200dp"
        android:src="@drawable/house" />

    <TextView
        android:id="@+id/title"
        android:layout_below="@+id/house_icon"
        android:layout_marginTop="-250dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome!"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:fontFamily="Roboto Thin"/>

    <TextView
        android:id="@+id/sub_title"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The most beautiful houses"
        android:singleLine="true"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:padding="10dp"
        android:fontFamily="Roboto Thin"/>

    <TextView
        android:id="@+id/description"
        android:layout_below="@+id/sub_title"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="In the next pages, we show you, ten of the most beautiful and richest house in the world. Your goal is rate the house and send the result by email."
        android:textAlignment="center"
        android:textSize="17sp"
        android:textColor="#ffffff"
        android:padding="10dp"
        android:fontFamily="Roboto Thin"/>

    <Button
        android:id="@+id/next_page"
        android:layout_below="@+id/description"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:text="Great, let's go"
        android:textColor="#ffffff"
        android:theme="@style/Button"
        android:onClick="Collection"/>




</RelativeLayout>
