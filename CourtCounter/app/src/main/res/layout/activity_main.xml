<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.courtcounter.MainActivity">

    <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:text="Reset"
        android:textAllCaps="true"
        android:onClick="Reset"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Team A"
            android:layout_toLeftOf="@+id/divider"
            android:layout_gravity="center_horizontal"
            android:paddingTop="16dp"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/point_team_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="56sp"
            android:paddingTop="16dp"
            android:layout_gravity="center_horizontal"/>

        <Button
            android:id="@+id/button3point_team_a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="+3 points"
            android:textAllCaps="true"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:onClick="plus3PointA"/>

        <Button
            android:id="@+id/button2point_team_a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="+2 points"
            android:textAllCaps="true"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:onClick="plus2PointA"/>

        <Button
            android:id="@+id/buttonfreethrow_team_a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Free throw"
            android:textAllCaps="true"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:onClick="plus1PointA"/>

    </LinearLayout>


    <View
        android:id="@+id/divider"
        android:layout_width="1dp"
        android:layout_height="300dp"
        android:background="@android:color/darker_gray"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/divider">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Team B"
            android:paddingTop="16dp"
            android:textSize="16sp"
            android:layout_toLeftOf="@+id/divider"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/point_team_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="56sp"
            android:paddingTop="16dp"
            android:layout_gravity="center_horizontal"/>

        <Button
            android:id="@+id/button3point_team_b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="+3 points"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:textAllCaps="true"
            android:onClick="plus3PointB"/>

        <Button
            android:id="@+id/button2point_team_b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="+2 points"
            android:textAllCaps="true"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:onClick="plus2PointB"/>

        <Button
            android:id="@+id/buttonfreethrow_team_b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Free throw"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:textAllCaps="true"
            android:onClick="plus1PointB"/>

    </LinearLayout>

    </LinearLayout>

</RelativeLayout>
