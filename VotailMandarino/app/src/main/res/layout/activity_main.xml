<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_welcome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="android.votailmandarino.dfp.votailmandarino.MainActivity">


    <TextView
        android:id="@+id/title"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I.I.S.S Fermi"
        android:textAllCaps="true"
        android:textSize="50sp"
        android:padding="16dp"
        android:textColor="#ffffff"
        android:fontFamily="Roboto Thin"/>

    <ImageView
        android:id="@+id/school_icon"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:src="@drawable/school" />

    <TextView
        android:id="@+id/sub_title"
        android:layout_below="@+id/school_icon"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="vota il mandarino"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:padding="10dp"
        android:textAllCaps="true"
        android:fontFamily="Roboto Thin"/>

    <TextView
        android:id="@+id/description"
        android:layout_below="@+id/sub_title"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nella pagina seguente verranno mostrati i 3 mandarini, con la quale il prof. Graziano avrÃ  effettuto l'esperimento."
        android:textAlignment="center"
        android:textSize="17sp"
        android:textColor="#ffffff"
        android:padding="10dp"
        android:fontFamily="Roboto Thin"/>

    <Button
        android:id="@+id/next_page"
        android:layout_below="@+id/description"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:text="Ok, Andiamo"
        android:theme="@style/Button"
        android:onClick="vota"/>




</RelativeLayout>
